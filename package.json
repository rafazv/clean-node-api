{
	"name": "clean-node-api",
	"version": "1.1.0",
	"description": "NodeJs Rest API using TDD, Clean Architecture and Typescript",
	"main": "index.js",
	"scripts": {
		"start": "node dist/main/server.js",
		"build": "rimraf dist && tsc",
		"debug": "node --inspect=0.0.0.0:9222 --nolazy dist/main/server.js",
		"up": "npm run build && sudo docker-compose up -d",
    "down": "sudo docker-compose down",
		"test": "jest --silent --noStackTrace --runInBand",
		"test:verbose": "jest --runInBand",
		"test:unit": "npm test -- --watch -c jest-unit-config.js",
		"test:integration": "npm test -- --watch -c jest-integration-config.js",
		"test:staged": "npm test -- --findRelatedTests",
		"test:ci": "npm test -- --coverage"
	},
	"author": "Rafaela Lima",
	"license": "ISC",
	"devDependencies": {
		"@shelf/jest-mongodb": "^4.1.7",
		"@types/bcrypt": "^5.0.0",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.5.1",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/mongodb": "^4.0.7",
		"@types/node": "^20.2.3",
		"@types/supertest": "^2.0.12",
		"@types/validator": "^13.7.17",
		"eslint-config-standard-with-typescript": "^34.0.1",
		"git-commit-msg-linter": "^5.0.4",
		"husky": "^8.0.3",
		"jest": "^29.5.0",
		"lint-staged": "^13.2.2",
		"rimraf": "^5.0.1",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.0",
		"typescript": "^5.0.4"
	},
	"dependencies": {
		"bcrypt": "^5.1.0",
		"express": "^4.18.2",
		"jsonwebtoken": "^9.0.1",
		"mongodb": "^5.6.0",
		"validator": "^13.9.0"
	},
  "engines": {
    "node": "16.x"
  }
}
